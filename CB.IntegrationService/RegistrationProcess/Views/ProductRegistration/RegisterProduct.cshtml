@model RegistrationProcess.Models.ProductInformation

@{
    ViewBag.Title = "RegisterProduct";
}

<h3>Register Your Product</h3>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, "Product Name", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EndpointURL , "Baseurl for product endpoints", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
               
                @Html.EditorFor(model => model.EndpointURL, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EndpointURL, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IPAddress,"Domain/IP Addresses", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextAreaFor(model => model.IPAddress, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IPAddress, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ServiceOffered,  "Supported Services", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9" style="border-width: 1px; border-color: #000; border-style: solid; padding-left:">

                <div class="checkbox">
                    <label><input type="checkbox" value="sis" name="chkService" checked="checked">Student Information System(SIS)</label>
                </div>

                <div class="checkbox">
                    <label><input type="checkbox" value="Tm" name="chkService" checked="" >Tuition Management(TM)</label>
                </div>

                <div class="checkbox disabled">
                    <label><input type="checkbox" value="" name="chkService" checked="">Admission(A)</label>
                </div>

                <div class="checkbox">
                    <label><input type="checkbox" value="" name="chkService" checked="">Financial Aid(FA)</label>
                </div>

                <div class="checkbox">
                    <label><input type="checkbox" value="" checked="">Enrollment(E)</label>
                </div>

                <div class="checkbox disabled">
                    <label><input type="checkbox" value="" checked="">Adjustment(A)</label>
                </div>

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="Register" class="btn btn-default" />
            </div>
        </div>
    </div>

    <div class="row" >
        <div class="col-md-12">
            @ViewBag.Message
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @ViewBag.SecretMessage
        </div>
        <div class="text-danger col-md-1">
            @ViewBag.SecretKey
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
